<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <main class="bg-gray-100 p-4 w-screen flex justify-center items-center">
    <form action="/new-note"
    class="bg-white p-6 rounded-md shadow-md w-[500px]">
      <h1 class="text-3xl font-bold mb-4 text-center underline">Create New Note</h1>
      
      <div class="mb-4">
        <label for="title" class="block text-gray-700 text-lg font-bold mb-2">Title:</label>
        <input type="text" id="title" name="title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
      </div>
      <div class="mb-4">
        <label for="description" class="block text-gray-700 text-lg font-bold mb-2">Description:</label>
        <textarea id="description" name="description" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required></textarea>
      </div>
      <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          Submit
        </button>
      </div>
    </form>
  </main>
   
</body>
</html>